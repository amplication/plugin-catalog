{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Amplication plugin catalog entry",
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "repo": {
        "type": "string"
      },
      "npm": {
        "type": "string"
      },
      "icon": {
        "type": "string"
      },
      "github": {
        "type": "string",
        "format": "uri",
        "qt-uri-protocols": [
            "https"
        ]
    },
    "website": {
        "type": "string",
        "format": "uri",
        "qt-uri-protocols": [
            "https"
        ]
    },
      "type": {
        "type": "string",
        "pattern": "^(community|official)$"
      },
      "categories": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^(cache|ci|database|deployment|documentation|formatter|linter|message-broker|observability|openai|security|api)$"
        }
      },
      "resourceTypes": {
        "type": "array",
        "items": {
          "type": "string",
          "pattern": "^(service|message-broker)$"
        }
      }
    },
    "required": [
      "id",
      "name",
      "description",
      "repo",
      "npm",
      "icon",
      "github",
      "website",
      "type",
      "categories",
      "resourceTypes"
    ]
  }